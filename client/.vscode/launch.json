{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Vue App Debug",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*"
      },
      "runtimeArgs": [
        "--new-window",
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}/.chrome-debug-profile"
      ]
    }
  ]
} 